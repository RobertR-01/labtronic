<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>
<?import java.lang.String?>
<VBox fx:id="root" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" spacing="10"
      fx:controller="com.app.labtronic.ui.caltab.valuation.ExtraFreqController" stylesheets="@../sub-tab-styles.css">
    <HBox fx:id="sectionHBox" spacing="20" alignment="CENTER">
        <Label text="VAC" underline="true"/>
        <TextField text="50" fx:id="freqTF" prefWidth="50"/>
        <ComboBox fx:id="freqCB" prefWidth="70">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Hz"/>
                    <String fx:value="kHz"/>
                </FXCollections>
            </items>
            <value>
                <String fx:value="Hz"/>
            </value>
        </ComboBox>
        <Button fx:id="addRangeBtn" onAction="#handleAddNewMeasRange">
            <tooltip>
                <Tooltip showDelay="500ms" text="Add new measurement range / points"/>
            </tooltip>
            <graphic>
                <FontIcon iconLiteral="bx-plus" iconSize="16"/>
            </graphic>
        </Button>
        <HBox spacing="10" alignment="CENTER">
            <Label text="Section cost: " alignment="CENTER"/>
            <Label fx:id="acCostL" alignment="CENTER"/>
        </HBox>
    </HBox>
    <TableView fx:id="tableView" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Range" resizable="false"/>
            <TableColumn text="Unit" resizable="false"/>
            <TableColumn text="Number of points" resizable="false"/>
            <TableColumn text="Type" resizable="false"/>
            <TableColumn text="Cost" resizable="false"/>
        </columns>
    </TableView>
</VBox>
