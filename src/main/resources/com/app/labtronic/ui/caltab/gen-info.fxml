<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<BorderPane fx:id="root" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.app.labtronic.ui.caltab.GenInfoController">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    <left>
        <GridPane style="-fx-border-color: black" vgap="10" minWidth="400">
            <padding>
                <Insets right="10"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints percentWidth="40"/>
                <ColumnConstraints percentWidth="60"/>
            </columnConstraints>

            <Label text="Registry number (Kubacki): " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <TextField fx:id="kubackiRegNoTF" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Label text="Registry number (Switez): " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="switezRegNoTF" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Date of order: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="2" editable="false"/>

            <Label text="Accreditation: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <CheckBox fx:id="accreditationCB" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        </GridPane>
    </left>
    <center>
        <GridPane style="-fx-border-color: black" vgap="10">
            <padding>
                <Insets left="10" right="10"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints percentWidth="30"/>
                <ColumnConstraints percentWidth="70"/>
            </columnConstraints>

            <Label text="Customer details" underline="true" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   GridPane.columnSpan="2" GridPane.halignment="CENTER">
                <GridPane.margin>
                    <Insets bottom="10"/>
                </GridPane.margin>
            </Label>

            <Label text="Name: " GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.valignment="TOP"/>
            <TextArea fx:id="customerNameTA" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

            <Label text="Address: " GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.valignment="TOP"/>
            <TextArea fx:id="customerAddressTA" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="End-user: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <CheckBox fx:id="endUserCB" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label fx:id="endUserNameL" text="Name: " GridPane.columnIndex="0" GridPane.rowIndex="4"
                   GridPane.valignment="TOP"/>
            <TextArea fx:id="endUserNameTA" text="n/a" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label fx:id="endUserAddressL" text="Address: " GridPane.columnIndex="0" GridPane.rowIndex="5"
                   GridPane.valignment="TOP"/>
            <TextArea fx:id="endUserAddressTA" text="n/a" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        </GridPane>
    </center>
    <right>
        <GridPane style="-fx-border-color: black" vgap="10" minWidth="400">
            <padding>
                <Insets left="10"/>
            </padding>
            <columnConstraints>
                <ColumnConstraints percentWidth="40"/>
                <ColumnConstraints percentWidth="60"/>
            </columnConstraints>

            <Label text="Instrument details" underline="true" GridPane.columnIndex="0" GridPane.rowIndex="0"
                   GridPane.columnSpan="2" GridPane.halignment="CENTER">
                <GridPane.margin>
                    <Insets bottom="10"/>
                </GridPane.margin>
            </Label>

            <GridPane GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>
                <fx:define>
                    <ToggleGroup fx:id="toggleGroup"/>
                </fx:define>
                <RadioButton fx:id="dmmRadio" text="Multimeter" GridPane.columnIndex="0"
                             toggleGroup="$toggleGroup" GridPane.halignment="CENTER"/>
                <RadioButton fx:id="calRadio" text="Calibrator" GridPane.columnIndex="1"
                             toggleGroup="$toggleGroup" GridPane.halignment="CENTER"/>
            </GridPane>

            <Label text="Manufacturer: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <TextField fx:id="manufacturerTF" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

            <Label text="Type: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="typeTF" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <Label text="Serial No: " GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="serialNoTF" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <Label fx:id="resolutionLabel" text="Resolution (pricing tier): " GridPane.columnIndex="0"
                   GridPane.rowIndex="5"/>
            <ComboBox fx:id="resolutionCB" GridPane.columnIndex="1" GridPane.rowIndex="5">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="&#x22DC; 4 8/9 digit"/>
                        <String fx:value="5 1/2 &#x00F7; 6 1/2 digit"/>
                        <String fx:value="&#x22DD; 7 1/2 digit"/>
                    </FXCollections>
                </items>
                <value>
                    <String fx:value="&#x22DC; 4 8/9 digit"/>
                </value>
            </ComboBox>
        </GridPane>
    </right>
</BorderPane>
