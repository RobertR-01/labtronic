<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.lang.String?>
<?import java.time.LocalDate?>
<DialogPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/18"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.app.labtronic.ui.NewCalDlgController">
    <content>
        <GridPane vgap="10" hgap="5" GridPane.columnIndex="0">
            <columnConstraints>
                <ColumnConstraints percentWidth="35"/>
                <ColumnConstraints percentWidth="65"/>
            </columnConstraints>
            <Label text="Registry number (Kubacki): " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <HBox GridPane.columnIndex="1" GridPane.rowIndex="0" spacing="2" alignment="BOTTOM_CENTER">
                <TextField fx:id="kubackiLabNo" text="L3" alignment="CENTER"/>
                <Label text="."/>
                <TextField fx:id="kubackiRegNo" text="401" alignment="CENTER"/>
                <Label text="."/>
                <TextField fx:id="kubackiOrdinalNo" alignment="CENTER"/>
                <Label text="."/>
                <TextField fx:id="kubackiYear" alignment="CENTER"/>
            </HBox>
            <Label text="Registry number (Switez): " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextField fx:id="switezRegNo" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Customer details" underline="true" GridPane.columnIndex="0" GridPane.rowIndex="2"
                   GridPane.columnSpan="2" GridPane.halignment="CENTER">
                <GridPane.margin>
                    <Insets top="10" bottom="10"/>
                </GridPane.margin>
            </Label>
            <Label text="Name: " GridPane.columnIndex="0" GridPane.rowIndex="3"/>
            <TextField fx:id="customerName" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
            <Label text="Address: " GridPane.columnIndex="0" GridPane.rowIndex="4"/>
            <TextField fx:id="customerAddress" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
            <Label text="Date of order: " GridPane.columnIndex="0" GridPane.rowIndex="5"/>
            <DatePicker fx:id="datePicker" GridPane.columnIndex="1" GridPane.rowIndex="5">
                <value>
                    <LocalDate fx:factory="now"/>
                </value>
            </DatePicker>
            <Label text="Instrument details" underline="true" GridPane.columnIndex="0" GridPane.rowIndex="6"
                   GridPane.columnSpan="2" GridPane.halignment="CENTER">
                <GridPane.margin>
                    <Insets top="10" bottom="10"/>
                </GridPane.margin>
            </Label>
            <GridPane GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2">
                <columnConstraints>
                    <ColumnConstraints percentWidth="50"/>
                    <ColumnConstraints percentWidth="50"/>
                </columnConstraints>
                <fx:define>
                    <ToggleGroup fx:id="toggleGroup"/>
                </fx:define>
                <RadioButton fx:id="dmmRadio" text="Multimeter" GridPane.columnIndex="0"
                             toggleGroup="$toggleGroup" GridPane.halignment="CENTER" selected="true"/>
                <RadioButton fx:id="calRadio" text="Calibrator" GridPane.columnIndex="1"
                             toggleGroup="$toggleGroup" GridPane.halignment="CENTER"/>
            </GridPane>
            <Label text="Manufacturer: " GridPane.columnIndex="0" GridPane.rowIndex="8"/>
            <TextField fx:id="manufacturer" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
            <Label text="Type: " GridPane.columnIndex="0" GridPane.rowIndex="9"/>
            <TextField fx:id="type" GridPane.columnIndex="1" GridPane.rowIndex="9"/>
            <Label text="Serial No: " GridPane.columnIndex="0" GridPane.rowIndex="10"/>
            <TextField fx:id="serialNo" GridPane.columnIndex="1" GridPane.rowIndex="10"/>
            <Label fx:id="resolutionLabel" text="Resolution (pricing tier): " GridPane.columnIndex="0"
                   GridPane.rowIndex="11"/>
            <ComboBox fx:id="resolutionCB" GridPane.columnIndex="1" GridPane.rowIndex="11">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="&#x22DC; 4 8/9 digit"/>
                        <String fx:value="5 1/2 &#x00F7; 6 1/2 digit"/>
                        <String fx:value="&#x22DD; 7 1/2 digit"/>
                    </FXCollections>
                </items>
                <value>
                    <String fx:value="&#x22DC; 4 8/9 digit"/>
                </value>
            </ComboBox>
        </GridPane>
    </content>
</DialogPane>
